<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quiz Results</title>
    <link rel="stylesheet" href="/stylesheets/resultStyles.css" />
    <script src="/routes/results.js"></script>
  </head>

  <body>
    <header>
      <h1>Quiz Results</h1>
    </header>

    <main>
      <!-- Results Section -->
      <section id="results">
        <h2>Your Score</h2>
        <p id="score">
          Score: <span id="scoreValue">0</span> /
          <span id="totalQuestions">0</span>
        </p>
      </section>

      <!-- Time Taken to Answer Each Question -->
      <section id="timeTaken">
        <h3>Time Taken per Question</h3>
        <ul id="questionTimes">
          <!-- Dynamically populated via JavaScript -->
        </ul>
      </section>

      <!-- Leaderboard -->
      <section id="leaderboard">
        <h3>Leaderboard</h3>
        <div id="leaderboardList">
          <div class="leaderboard-item">
            <span>Username</span><span>85</span>
          </div>
          <div class="leaderboard-item">
            <span>Username</span><span>78</span>
          </div>
          <div class="leaderboard-item">
            <span>Username</span><span>92</span>
          </div>
          <!-- Leaderboard can be dynamically populated -->
        </div>
      </section>

      <!-- Buttons for restarting or ending the quiz -->
      <section id="actionButtons">
        <button id="restartQuiz" onclick="restartQuiz()">
          Restart Quiz <img src="/public/Images/restartIcon.jpeg" height="20" width="'20" />
        </button>
        <button id="endQuiz" onclick="endQuiz()">
          End Quiz <img src="/public/Images/redCross.jpeg" height="20" width="20" />
        </button>
      </section>
    </main>

    <footer>
      <p>&copy; Quiz App <br />Stay Curious and Keep Learning</p>
    </footer>
  </body>
</html>
