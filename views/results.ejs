<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Quiz Results</title>
    <!-- Link your custom CSS -->
    <link rel="stylesheet" href="/stylesheets/resultsStyles.css" />
  </head>
  <body>
    <header>
      <h1>Quiz Results</h1>
    </header>

    <main>
      <!-- Score Display -->
      <section id="results">
        <h2>Your Score</h2>
        <p id="score">
          Score:
          <span id="scoreValue"><%= score %></span>
          /
          <span id="totalQuestions"><%= totalQuestions %></span>
        </p>
      </section>

      <!-- Leaderboard -->
      <section id="leaderboard">
        <h3>Leaderboard</h3>
        <div id="leaderboardList">
          <% if (scoreboard && scoreboard.length) { %>
            <% scoreboard.forEach(function(player) { %>
              <div class="leaderboard-item">
                <span><%= player.username %></span>
                <span><%= player.score %></span>
              </div>
            <% }) %>
          <% } else { %>
            <p>No scores yet!</p>
          <% } %>
        </div>
      </section>

      <!-- Action Buttons -->
      <section id="actionButtons">
        <button id="restartQuiz" onclick="restartQuiz()">
          Restart Quiz 
          <img 
            src="/stylesheets/Images/restartIcon.jpeg" 
            alt="Restart Icon" 
            height="20" 
            width="20" 
          />
          
        </button>
        <button id="endQuiz" onclick="endQuiz()">
          End Quiz 
          <img
            src="/stylesheets/Images/redCross.jpeg" 
            alt="End Quiz Icon" 
            height="20" 
            width="20" 
          />
        </button>
      </section>
    </main>

    <footer>
      <p>&copy; Quiz App <br />Stay Curious and Keep Learning</p>
    </footer>

    <!-- Inline script merging the old script.js logic -->
    <script>
      // Function to restart the quiz
      function restartQuiz() {
        // For example, go back to the quiz page
        window.location.href = '/quiz';
      }

      // Function to end the quiz
      function endQuiz() {
        alert("Quiz Ended! Thank you for participating.");
        // Optionally redirect to homepage or do something else
        // window.location.href = '/';
      }
    </script>
  </body>
</html>
